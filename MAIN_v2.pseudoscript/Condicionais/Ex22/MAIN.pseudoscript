/* Crie um programa que calcule o valor do aluguer de um carro, considerando €50,00 por dia e
€0,20 por quilômetro rodado */

entrada("Insere o número de dias de aluguer: ", dias)
entrada("Insere o número de quilometros: ", quilometros)

funcao aluguer(numero, quilometros)
	aluguer_carro = (0.2 * quilometros) + (50 * dias)
	retorne aluguer_carro
    
imprime (aluguer(numero, quilometros))
